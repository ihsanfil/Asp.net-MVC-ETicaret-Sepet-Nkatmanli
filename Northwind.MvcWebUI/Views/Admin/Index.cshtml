@model System.Collections.Generic.List<Northwind.Entities.Product>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Product List</h2>

@Html.ActionLink("Create New", "CreateNew")

<table class="table table-border table-striped">
    <tr>
        <th>Product Id</th>
        <th>Product Name</th>
        <th>Unite Price</th>
        <th>Edit</th>
        <th>Delete</th>

    </tr>
   
        @foreach (var product in Model)
        {
            <tr>
            <td>@product.ProductID</td>
            <td>@product.ProductName</td>
            <td>@product.UnitPrice</td>
            <td>@Html.ActionLink("Edit", "Edit", new { productId = product.ProductID })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { productId = product.ProductID })</td>
            </tr>
        }

   
</table>
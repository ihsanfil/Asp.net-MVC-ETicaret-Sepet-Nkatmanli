@model System.Collections.Generic.List<Northwind.Entities.Category>


<ul class="list-group">

    <li class="list-group-item">
        @Html.RouteLink("Home", 
            new { controller = "Product", action = "Index",category=0},
            new {@class=ViewBag.CurrentCategory==0?"selected":null})
    </li>
    @foreach (var category in Model)
    {
        <li class="list-group-item">
            @Html.RouteLink(
            category.CategoryName,
            new
            {
                category = category.CategoryID,
                controller = "Product",
                action = "Index"
            },
                new {@class=category.CategoryID==ViewBag.CurrentCategory?"selected":null}

            )
        </li>
    }

</ul>
<!doctype html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>ADMİN PANELİ</title>
    <meta name="description" content="Sufee Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="stylesheet" href="~/Content/panelTema/assets/css/normalize.css">
    <link href="~/Content/panelTema/~/Content/panelTema/assets/css/normalize.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/panelTema/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/panelTema/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/panelTema/assets/css/themify-icons.css">
    <link rel="stylesheet" href="~/Content/panelTema/assets/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/Content/panelTema/assets/css/cs-skin-elastic.css">
    <link rel="stylesheet" href="~/Content/panelTema/assets/scss/style.css">
    <link href="~/Content/panelTema/assets/css/lib/vector-map/jqvmap.min.css" rel="stylesheet">
    <link href="~/Content/Style.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

</head>
<body>
    <!-- Left Panel -->
    <aside id="left-panel" class="left-panel">
        <nav class="navbar navbar-expand-sm navbar-default">
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="./"><img src="~/Content/panelTema/images/logo.png" alt="Logo"></a>
                <a class="navbar-brand hidden" href="./"><img src="~/Content/panelTema/images/logo2.png" alt="Logo"></a>
            </div>
            <div>
                @{
                    Html.RenderAction("List", "Category");
                }
            </div><!-- /.navbar-collapse -->
        </nav>
    </aside><!-- /#left-panel -->
    <!-- Left Panel -->
    <!-- Right Panel -->
<div id="right-panel" class="right-panel">
    @{Html.RenderAction("CartSummery","Cart");}
    <div style="background: grey; padding: 10px 10px; color: white" class="text-center">
        <h2>NorthWind Projesine Hoş Geldiniz...</h2>
    </div>
    <div class="container mt-5">
        @RenderBody()
    </div>
</div>

    <!-- Right Panel -->
    <script src="~/Content/panelTema/assets/js/vendor/jquery-2.1.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"></script>
    <script src="~/Content/panelTema/assets/js/plugins.js"></script>
    <script src="~/Content/panelTema/assets/js/main.js"></script>

    <script src="~/Content/panelTema/assets/js/lib/chart-js/Chart.bundle.js"></script>
    <script src="~/Content/panelTema/assets/js/dashboard.js"></script>
    <script src="~/Content/panelTema/assets/js/widgets.js"></script>
    <script src="~/Content/panelTema/assets/js/lib/vector-map/jquery.vmap.js"></script>
    <script src="~/Content/panelTema/assets/js/lib/vector-map/jquery.vmap.min.js"></script>
    <script src="~/Content/panelTema/assets/js/lib/vector-map/jquery.vmap.sampledata.js"></script>
    <script src="~/Content/panelTema/assets/js/lib/vector-map/country/jquery.vmap.world.js"></script>
    <script>
        (function ($) {
            "use strict";

            jQuery('#vmap').vectorMap({
                map: 'world_en',
                backgroundColor: null,
                color: '#ffffff',
                hoverOpacity: 0.7,
                selectedColor: '#1de9b6',
                enableZoom: true,
                showTooltip: true,
                values: sample_data,
                scaleColors: ['#1de9b6', '#03a9f5'],
                normalizeFunction: 'polynomial'
            });
        })(jQuery);
    </script>
</body>
